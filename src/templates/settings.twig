{% import "_includes/forms" as forms %}

{{ forms.textField({
    first: true,
    label: "Api Key",
    name: 'apiKey',
    value: settings.apiKey,
    required: true
}) }}

{{ forms.textField({
    label: "Password",
    name: 'password',
    value: settings.password,
    required: true
}) }}

{{ forms.textField({
    label: "Shared Secret",
    name: 'secret',
    value: settings.secret,
    required: true
}) }}

{{ forms.textField({
    label: "Hostname",
    name: 'hostname',
    value: settings.hostname,
    required: true,
    placeholder: 'Your shopify domain, for example: yourdomain.com or yourshopifydomain.myshopify.com'|t,
    errors: settings.getErrors('hostname')
}) }}

{{ forms.textField({
    label: "Limit",
    name: 'limit',
    value: settings.limit,
    required: false,
    placeholder: 'API return limit, default is 50. Maximum is 250.'|t,
    errors: settings.getErrors('limit')
}) }}

{{ forms.textField({
    label: "Published Status",
    name: 'published_status',
    value: settings.published_status,
    required: false,
    placeholder: 'The published status for products in the default field. Default is "any". Other choices are: published, unpublished'|t,
    errors: settings.getErrors('published_status')
}) }}
